# .ebextensions/01_laravel.config

commands:
  01_set_permissions:
    command: |
      chown -R webapp:webapp /var/app/current/storage /var/app/current/bootstrap/cache
      chmod -R 775 /var/app/current/storage /var/app/current/bootstrap/cache

files:
  "/etc/httpd/conf.d/00_laravel.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      DocumentRoot /var/app/current/public

      <Directory /var/app/current/public>
          AllowOverride All
          Options Indexes FollowSymLinks
          Require all granted
          DirectoryIndex index.php index.html
      </Directory>
